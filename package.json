{
  "name": "slidesv2",
  "version": "1.0.0",
  "description": "A proof of concept for slides with conditional paths",
  "main": "app.js",
  "scripts": {
    "test": "npm run lint && npm run test-unit",
    "test-unit": "mocha --opts mocha.opts",
    "test-unit:w": "npm run test-unit -- --watch",
    "lint": "standard && eslint .",
    "coverage": "isparta cover _mocha -- --opts mocha.opts",
    "build": "webpack --config ./server/webpack-production.config.js --progress --colors",
    "postinstall": "npm run build",
    "start": "node app.js"
  },
  "author": "Jeroen Engels <jfm.engels@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.7.0",
    "babel-core": "^6.3.15",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "css-loader": "^0.23.0",
    "expect": "^1.13.4",
    "express": "^4.13.3",
    "file-loader": "^0.8.4",
    "lodash": "^4.0.0",
    "postcss-loader": "^0.7.0",
    "qs": "^5.1.0",
    "react": "^0.14.0",
    "react-css-modules": "^3.6.1",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0-rc1",
    "redux": "^3.0.0",
    "redux-thunk": "^1.0.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.1"
  },
  "devDependencies": {
    "ava": "^0.10.0",
    "babel-eslint": "^4.1.1",
    "babel-register": "^6.4.3",
    "coveralls": "^2.11.4",
    "deep-freeze-node": "^1.1.1",
    "eslint": "^1.3.1",
    "eslint-config-standard": "^4.4.0",
    "eslint-config-standard-react": "^1.1.0",
    "eslint-plugin-react": "^3.3.1",
    "eslint-plugin-standard": "^1.3.1",
    "isparta": "^3.1.0",
    "mocha": "^2.3.3",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^2.1.2",
    "standard": "^5.3.1",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.4.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach",
      "before",
      "after"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfmengels/slidesv2.git"
  },
  "bugs": {
    "url": "https://github.com/jfmengels/slidesv2/issues"
  },
  "homepage": "https://github.com/jfmengels/slidesv2#readme"
}
